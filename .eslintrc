{
    "extends": ["eslint:recommended",
                "plugin:@typescript-eslint/recommended",
                "plugin:react/recommended",
                "prettier",
                "react-app"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "plugins": ["@typescript-eslint", "react"],
    "rules": {
        "react/prop-types": "off", // Desabilitar verificação de prop-types
        "@typescript-eslint/explicit-module-boundary-types": "off", // Desabilitar verificação de tipos explícitos em funções
        "no-unused-vars": "warn",
        "no-console": "warn",
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
  }
  